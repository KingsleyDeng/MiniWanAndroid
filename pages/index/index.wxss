/**index.wxss**/
page {
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.weui-search-bar {
  position: relative;
  padding: 8px 0 8px 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 6rpx;
  background: #e5e5e5;
  border: 1rpx solid #e5e5e5;
  margin-right: 30rpx;
  font-size: 0;
  padding: 8rpx;
}

.weui-icon-search {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  display: inline-block;
  vertical-align: middle;
}

.weui-search-bar__text {
  display: inline-block;
  color: #999;
  font-size: 28rpx;
  padding: 0;
  vertical-align: middle;
}

.banner-box {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.banner-image {
  width: 100%;
  height: 380rpx;
}
