/* pages/me/me.wxss */
.UCenter-bg {
  background-image: url(https://www.mtjsoft.cn/media/wanandroid/userbg.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .loginbutton{
  width: 300rpx;
	height: 56rpx;
	border: 2rpx solid #333335;
	font-size: 28rpx;
  line-height: 14rpx;
	color: #333335;
	border-radius: 56rpx;
  text-align: middle;
}

.UCenter-bg .logintext{
	float: left;
	line-height: 126rpx;
	font-size: 40rpx;
	color: #333335
}


.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.list-item{
  display: flex;
  align-items: center;
  background-color: #fff;
  padding:0 30rpx;
  height: 120rpx;
}
.list-item-img{
  width: 35rpx;
  height: 35rpx;
}
.list-item-name{
  font-size: 28rpx;
  color: #1a1a1a;
  margin-left: 20rpx;
}
